{
  "name": "roteiro",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "node ./api/index.js",
    "build:client": "webpack",
    "deploy:prisma": "prisma deploy",
    "deploy:now": "now --public -e PRISMA_ENDPOINT -e APP_SECRET -e NODE_ENV && now alias && now remove roteiro --safe --yes",
    "gen:elm": "graphqelm http://localhost:4000",
    "watch:client": "webpack-dev-server --hot",
    "watch:server": "nodemon --inspect ./api/index.js",
    "test": "echo \"100% coverage!\" && exit 0",
    "lint": "eslint api/**/*.js client/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ronanyeah/roteiro.git"
  },
  "author": "ronanyeah",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/ronanyeah/roteiro/issues"
  },
  "homepage": "https://github.com/ronanyeah/roteiro#readme",
  "dependencies": {
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@fortawesome/fontawesome-free": "^5.3.1",
    "babel-loader": "^8.0.2",
    "bcryptjs": "^2.4.3",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "elm-webpack-loader": "^5.0.0",
    "graphql": "^14.0.2",
    "graphql-yoga": "^1.16.2",
    "jsonwebtoken": "^8.3.0",
    "node-sass": "^4.9.3",
    "prisma": "^1.17.0-beta.16",
    "prisma-binding": "^2.1.5",
    "prisma-yml": "^1.0.99",
    "ramda": "^0.25.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "validator": "^10.7.1",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0"
  },
  "devDependencies": {
    "@dillonkearns/elm-graphql": "^1.0.4",
    "elm-hot-webpack-loader": "^1.0.1",
    "eslint": "^5.6.0",
    "eslint-plugin-fp": "^2.3.0",
    "faker": "^4.1.0",
    "get-graphql-schema": "^2.1.1",
    "graphql-request": "^1.8.2",
    "nodemon": "^1.18.4",
    "now": "^11.4.4",
    "prettier": "^1.14.2",
    "webpack-dev-server": "^3.1.8"
  },
  "now": {
    "alias": "roteiro"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "fp/no-mutation": [
        "error",
        {
          "commonjs": true
        }
      ],
      "no-console": 0,
      "fp/no-unused-expression": 0,
      "fp/no-throw": 0,
      "fp/no-nil": 0
    },
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 9
    }
  }
}
