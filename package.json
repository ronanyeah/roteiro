{
  "name": "roteiro",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.js",
  "scripts": {
    "start": "node ./api/index.js",
    "deploy-prisma": "prisma deploy",
    "deploy-now": "now --public -e PRISMA_ENDPOINT -e APP_SECRET -e NODE_ENV && now alias && now remove roteiro --safe --yes",
    "gen-prisma": "get-graphql-schema http://localhost:4466 > ./prisma/generated/prisma.graphql",
    "gen-elm": "graphqelm http://localhost:4000",
    "watch:client": "webpack-dev-server --hot",
    "watch:server": "nodemon --inspect ./api/index.js",
    "build-client": "webpack && npm run build-redirects",
    "build-redirects": "node build-redirects.js",
    "test": "echo \"100% coverage!\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ronanyeah/roteiro.git"
  },
  "author": "ronanyeah",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/ronanyeah/roteiro/issues"
  },
  "homepage": "https://github.com/ronanyeah/roteiro#readme",
  "dependencies": {
    "@babel/core": "^7.0.0-beta.55",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@fortawesome/fontawesome-free": "^5.2.0",
    "babel-loader": "^8.0.0-beta.4",
    "bcryptjs": "^2.4.3",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "elm-webpack-loader": "^4.5.0",
    "faker": "^4.1.0",
    "graphql": "^0.13.2",
    "graphql-cli": "^2.16.5",
    "graphql-yoga": "^1.14.12",
    "jsonwebtoken": "^8.3.0",
    "node-sass": "^4.9.1",
    "prisma": "^1.12.2",
    "prisma-binding": "^2.1.1",
    "ramda": "^0.25.0",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "validator": "^10.4.0",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0"
  },
  "devDependencies": {
    "elm-hot-loader": "^0.5.4",
    "eslint": "^5.2.0",
    "eslint-plugin-fp": "^2.3.0",
    "get-graphql-schema": "^2.1.1",
    "graphqelm": "^3.1.12",
    "graphql-request": "^1.7.0",
    "nodemon": "^1.18.3",
    "now": "^11.3.2",
    "prettier": "^1.14.0",
    "webpack-dev-server": "^3.1.5"
  },
  "now": {
    "alias": "roteiro"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "fp/no-mutation": [
        "error",
        {
          "commonjs": true
        }
      ]
    },
    "env": {
      "node": true,
      "window": true
    },
    "plugins": [
      "fp"
    ],
    "extends": [
      "plugin:fp/recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    }
  }
}
